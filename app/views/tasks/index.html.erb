<h1><%= 'Tasks' %></h1>

<div class="container">
  <div class="row"> 
    <div class="col col-33">
      <h3><%= 'New tasks' %></h3>
      <% @tasks.where(task_status: 0).each do |t| %>
        <ul>
          <li><%= link_to "#{t.title}", t %></li>
          <%= link_to 'Start', start_task_path(t) %> 
        </ul>
      <% end %>
    </div>
    <div class="col col-33">
      <h3><%= 'In progress' %></h3>
      <% @tasks.where(task_status: 1).each do |t| %>
        <ul>
          <li><%= link_to "#{t.title}", t %></li>
          <% if t.approved_counter >= 2 %>
            <%= link_to 'Completed', complete_task_path(t) %> 
          <% end %>
        </ul>
      <% end %>  
    </div>
    <div class="col col-33">
      <h3><%= 'Complete' %></h3>
      <% @tasks.where(task_status: 2).each do |t| %>
        <ul>
          <li><%= link_to "#{t.title}", t %></li>
        </ul>
      <% end %>
    </div>
  </div>
</div>